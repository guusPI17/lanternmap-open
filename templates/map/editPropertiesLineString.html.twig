{% block body %}
    <div id="updatePropertiesFeatureLineString" class="overlay">
        <a id="closeUpdatePropFeatureLineString" href="javascript:void(0)" class="closebtn">&times;</a>

        <div class="overlay-content">
            <div class="container-fluid d-flex h-100 justify-content-center align-items-center p-0">

                <div class="row shadow-sm panel-row">

                    <form id="propertiesFormLineString" onsubmit="return false;">
                        <div class="col panel-col">
                            <div class="form-group">
                                <label class="labelFormProperties" for="propertiesNameFeatureLineString">Название: </label>
                                <input class="form-control" required placeholder="Название улицы" id="propertiesNameFeatureLineString" type="text">
                                <small class="form-text text-muted">Название улицы</small>
                            </div>
                            <div class="form-group">
                                <label class="labelFormProperties" for="propertiesLengthFeatureLineString">Длина: </label>
                                <input class="form-control" required placeholder="Длина улицы в метрах" id="propertiesLengthFeatureLineString" type="text">
                                <small class="form-text text-muted">Длина в метрах</small>
                            </div>
                            <div class="form-group">
                                <label class="labelFormProperties" for="propertiesWidthFeatureLineString">Ширина: </label>
                                <input class="form-control" required placeholder="Ширина улицы в метрах" id="propertiesWidthFeatureLineString" type="text">
                                <small class="form-text text-muted">Ширина в метрах</small>
                            </div>
                            <div class="form-group">
                                <label class="labelFormProperties" for="propertiesClassObjectFeatureLineString">Класс объекта: </label>
                                <select class="form-control" required id="propertiesClassObjectFeatureLineString">
                                    <option selected value="" disabled>Выберите класс</option>
                                    {% for class in streetClass %}
                                        <option value="{{ class.name }}">{{ class.name }}</option>
                                    {% endfor %}
                                </select>
                                <small class="form-text text-muted">Описание классов предоставлено в <a target="_blank" class="helpTextForm" href="https://docs.cntd.ru/document/1200105703">ГОСТе 55706-2013</a></small>
                            </div>
                            <div class="form-group">
                                <label class="labelFormProperties" for="propertiesPriorityFeatureLineString">Приоритет: </label>
                                <input class="form-control" required placeholder="Приоритет улицы" id="propertiesPriorityFeatureLineString" type="text">
                                <small class="form-text text-muted">Данное число используется, если у улиц был определен
                                    <br> одинаковый рейтинг (число от 1 до 100 000).</small>
                            </div>
                            <div class="form-group">
                                <button id="applyChangesLineString" class="btn btn-light">Применить</button>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
{% endblock %}