{% extends 'project/base.html.twig' %}
    {% block title %}Авторизация / LanternMap{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% block body %}
    <div class="container-fluid d-flex h-100 justify-content-center align-items-center p-0">

        <div class="row shadow-sm border border-dark panel-row">

            <div class="col panel-col">
                <h3 class="text-center titlePanel">Авторизация</h3>
                <div class="div authorizationSite namePage">
                    на Lantern<b>M</b>ap.ru
                </div>

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="form-group mb-4 text-center">
                        <input type="email" placeholder="Почта" class="myInput" value="{{ last_username }}" name="email" id="inputEmail" required autofocus>
                    </div>
                    <div class="form-group mb-4 text-center">
                        <input type="password" name="password" placeholder="Пароль" class="myInput" id="inputPassword" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="form-group mt-5">
                        <button class="btn link-button w-100" type="submit">
                            Войти
                        </button>
                    </div>
                    <div class="form-group mt-4">
                        <a class="btn link-button w-100" href="{{ path('app_registration') }}">Регистрация</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}